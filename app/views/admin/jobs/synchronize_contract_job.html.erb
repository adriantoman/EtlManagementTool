<%= semantic_form_for @job,:url => admin_jobs_create_contract_sychnronization_path,:validate => true do |a| %>


    <%= a.inputs "Job Synchronize Contract" do %>
        <%= a.input :job_type, :input_html => { :disabled => true , :value => "Contract Synchronization" } %>
        <%= a.input :settings_server_id,  :as => :select, :collection => SettingsServer.all %>
        <%= a.input :key,  :as => :hidden, :input_html => { :value => params["type"] } %>
        <%= a.input :contract, :as => :hidden, :input_html => { :value => @contract } %>
    <% end %>

    <%= a.inputs "Schedule" do %>
        <%= a.input :recurrent,  :as => :radio, :collection => ["true", "false"] %>
        <%= a.input :scheduled_at, :as => :just_datetime_picker, :input_html => { :value => {:combined_value => @job.scheduled_at,:date => @job.scheduled_at.to_date}} %>
        <%= a.input :cron %>
    <% end %>

    <%= a.inputs "Parameters" do %>
        <%= a.input :param_mode ,:as => :string , :label => "Mode" %>
        <%= a.input :param_resource ,:as => :string , :label => "Resource" %>
    <% end %>

    <%= a.actions do %>
        <%= a.action :submit %>
    <% end %>

<% end %>








